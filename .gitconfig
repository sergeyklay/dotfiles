[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[user]
  name = Serghei Iakovlev
  email = sadhooklay@gmail.com
[core]
  editor = vim
  autocrlf = input
  safecrlf = true
  whitespace = trailing-space,space-before-tab,indent-with-non-tab
  pager = less -R
  excludesfile = ~/git/ignore_global
[merge]
  tool = vimdiff
[color]
  status = auto
  branch = auto
  interactive = auto
  diff = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  hist = log --graph --decorate --pretty=format:\"%Cred%h%Creset | %Cgreen%ad%Creset | %s%d [%C(yellow)%an%Creset]\" --graph --date=local
  type = cat-file -t
  dump = cat-file -p
  br = branch
  st = status
  sd = diff --stat
  ci = commit
  co = checkout
  dc = diff --cached
  rp = remote prune
  rs = remote show
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  ign = ls-files -o -i --exclude-standard
  last = log -1 HEAD
  mf = merge --no-ff
  visual = !gitk
  count = !~/bin/git-count
  puhs = push
[url "git://github.com/"]
  insteadOf = github:
[url "git@github.com:sergeyklay/"]
  insteadOf = klay:
[mergetool]
  prompt = true
[push]
  default = simple
[commit]
  template = ~/git/message.txt
