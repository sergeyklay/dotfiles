# Read `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Variables
set $term alacritty
set $menu wofi --show drun,dmenu | xargs swaymsg exec --

include conf.d/*.conf

### App Defaults

# default floating
for_window [app_id="telegram-desktop"] floating enable
for_window [app_id="mpv"] floating enable
for_window [app_id="xsensors"] floating enable
for_window [title="Welcome to CLion"] floating enable, focus;

# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
  swaybar_command waybar
}

exec mako

set $gnome-schema org.gnome.desktop.interface
exec_always {
  gsettings set $gnome-schema gtk-theme 'Arc'
  gsettings set $gnome-schema icon-theme 'Arc'
  gsettings set $gnome-schema cursor-theme 'DMZ-Black'
  gsettings set $gnome-schema font-name 'Ubuntu 11'
}
