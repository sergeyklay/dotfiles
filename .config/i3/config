# Settings
set $mod Mod4
set $alt Mod1
set $bs bindsym

font pango:SFNS Display 9
floating_modifier $mod

$bs $mod+Return exec i3-sensible-terminal
$bs $mod+Shift+q kill
$bs $mod+d exec rofi -show run
$bs $mod+l exec i3lock -f -e -p win -c 0000aa -i ~/.config/i3/bsod.png

# Changing the focus
$bs $mod+Left focus left
$bs $mod+Down focus down
$bs $mod+Up focus up
$bs $mod+Right focus right

# Move focused window
$bs $mod+Shift+j move left
$bs $mod+Shift+k move down
$bs $mod+Shift+l move up
$bs $mod+Shift+semicolon move right

# Alternatively, you can use the cursor keys:
$bs $mod+Shift+Left move left
$bs $mod+Shift+Down move down
$bs $mod+Shift+Up move up
$bs $mod+Shift+Right move right

# Split in horizontal orientation
$bs $mod+h split h

# Split in vertical orientation
$bs $mod+v split v

# Enter fullscreen mode for the focused container
$bs $mod+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
$bs $mod+s layout stacking
$bs $mod+w layout tabbed
$bs $mod+e layout toggle split

# Toggle tiling / floating.
$bs $alt+Shift+space floating toggle

# Change focus between tiling / floating windows.
$bs $alt+space focus mode_toggle

# Focus the parent container
$bs $mod+a focus parent

# Focus the child container
# $bs $mod+d focus child

# Workspace names
set $workspace1 "1"
set $workspace2 "2"
set $workspace3 "3"
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"
set $workspace10 "10"

workspace $workspace1 output HDMI-1
workspace $workspace2 output eDP-1
workspace $workspace3 output HDMI-1
workspace $workspace4 output eDP-1
workspace $workspace5 output HDMI-1
workspace $workspace6 output HDMI-1
workspace $workspace7 output HDMI-1
workspace $workspace8 output HDMI-1
workspace $workspace9 output HDMI-1
workspace $workspace10 output eDP-1

# Switch to workspace
$bs $mod+1 workspace $workspace1
$bs $mod+2 workspace $workspace2
$bs $mod+3 workspace $workspace3
$bs $mod+4 workspace $workspace4
$bs $mod+5 workspace $workspace5
$bs $mod+6 workspace $workspace6
$bs $mod+7 workspace $workspace7
$bs $mod+8 workspace $workspace8
$bs $mod+9 workspace $workspace9
$bs $mod+0 workspace $workspace10

# Move focused container to workspace
$bs $mod+Shift+1 move container to workspace $workspace1
$bs $mod+Shift+2 move container to workspace $workspace2
$bs $mod+Shift+3 move container to workspace $workspace3
$bs $mod+Shift+4 move container to workspace $workspace4
$bs $mod+Shift+5 move container to workspace $workspace5
$bs $mod+Shift+6 move container to workspace $workspace6
$bs $mod+Shift+7 move container to workspace $workspace7
$bs $mod+Shift+8 move container to workspace $workspace8
$bs $mod+Shift+9 move container to workspace $workspace9
$bs $mod+Shift+0 move container to workspace $workspace10

# Reload the configuration file
$bs $mod+Shift+c reload

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
$bs $mod+Shift+r exec --no-startup-id xrandr --auto, restart

# Exit i3 (logs you out of your X session)
$bs $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Pulse Audio controls
# See: man 1 pactl
$bs XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% && pkill -RTMIN+1 i3blocks
$bs XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% && pkill -RTMIN+1 i3blocks
$bs XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle && pkill -RTMIN+1 i3blocks

# Touchpad controls
# See: https://github.com/sergeyklay/dotfiles/blob/master/bin/toggletouchpad
$bs XF86TouchpadToggle exec toggletouchpad
$bs XF86TouchpadOn exec --no-startup-id synclient TouchpadOff=0
$bs XF86TouchpadOff exec --no-startup-id synclient TouchpadOff=1

# Microphone control
#
# My BIOS is bugged.  For example the XF86Phone key is not recognized when
# pressed.  However I don't want to upgrade the BIOS firmware provided by the
# manufacturer.
#
# $bs XF86Phone exec amixer set Capture toggle

# Screen brightness controls
# See: https://github.com/haikarainen/light
$bs XF86MonBrightnessUp exec light -A 10
$bs XF86MonBrightnessDown exec light -U 10

$bs $mod+Tab workspace next
$bs $mod+Shift+Tab workspace prev

# Resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        $bs j resize shrink width 10 px or 10 ppt
        $bs k resize grow height 10 px or 10 ppt
        $bs l resize shrink height 10 px or 10 ppt
        $bs semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        $bs Left resize shrink width 10 px or 10 ppt
        $bs Down resize grow height 10 px or 10 ppt
        $bs Up resize shrink height 10 px or 10 ppt
        $bs Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        $bs Return mode "default"
        $bs Escape mode "default"
}

$bs $mod+r mode "resize"

bar {
    # Works well with v4.7.0
    # For more see: https://bbs.archlinux.org/viewtopic.php?id=233098
    font pango:FontAwesome 10
    position top
    status_command i3blocks -c ~/.config/i3blocks/config
    tray_output primary
}

# Border Colors

# class                 border  backgr. text    indicator child_border
client.focused          #000000 #000000 #000000 #ff69b4   #000000
client.focused_inactive #000000 #5f676a #ffffff #ff69b4   #000000
client.unfocused        #000000 #222222 #888888 #ff69b4   #000000
client.urgent           #ffffff #900000 #ffffff #ff69b4   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #000000

# Window settings

for_window [class="^.*"] border pixel 2
for_window [class="Shutter"] floating enable
for_window [class="zoom"] floating enable
for_window [class="Shutter"] resize set 800 680
for_window [class="discord"] move to workspace $workspace9
for_window [class="zoom"] move to workspace $workspace8
for_window [class="Gnome-terminal"] border pixel 1

# Assignments

assign [class="discord"] → $workspace9
assign [class="zoom"] → $workspace8

