{
    "editor.dragAndDrop": false,
    "editor.lineNumbers": "off",
    "editor.renderIndentGuides": false,
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "none",
    "editor.cursorStyle": "block",
    "editor.fontFamily": "SFMono-Regular, Consolas, 'Liberation Mono', Menlo, Courier, monospace",
    "editor.fontSize": 14,
    "editor.fontLigatures": false,
    "editor.occurrencesHighlight": false,
    "editor.rulers": [68,78,80,120],
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "none",

    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.fontFamily": "SFMono-Regular, Consolas, 'Liberation Mono', Menlo, Courier, monospace",
    "terminal.integrated.fontSize": 17,

    "workbench.tree.indent": 22,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.iconTheme": "vs-minimal",
    "workbench.colorTheme": "One Dark Pro Monokai Darker",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#50505049"
    },

    "window.zoomLevel": 0,

    "breadcrumbs.enabled": false,

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "extensions.autoUpdate": false,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "extensions.autoCheckUpdates": false,

    "update.mode": "manual",
    "update.showReleaseNotes": false,
    "typescript.disableAutomaticTypeAcquisition": true,
    "npm.fetchOnlinePackageInfo": false,

    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "environment": "dotenv",
        "*.env.dist": "dotenv",
        "*.neon.dist": "yaml",
        ".php_cs": "php",
        ".php_cs.dist": "php",
        ".php_cs.cache": "json",
        "*.json.dist": "json",
        ".my.cnf": "properties",
        ".wgetrc": "properties",
        ".dockerignore": "ignore",
        "zephir-autocomplete": "shellscript"
    },

    // Extensions

    "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
    "todo-tree.general.tags": [
        "TODO",
        "@TODO",
        "@Todo",
        "@todo",
        "FIXME",
        "@fixme",
        "@deprecated",
        "@note"
    ],

    "calva.lintOnSave": true,
    "calva.syncReplNamespaceToCurrentFile": true,

    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.intelliSenseCachePath": "~/.cache/vscode/cpptools",

    "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',  sans-serif ",

    "projectManager.showProjectNameInStatusBar": false
}
