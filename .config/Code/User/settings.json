{
    "editor.dragAndDrop": false,
    "editor.minimap.enabled": false,
    "editor.cursorStyle": "block",
    "editor.fontFamily": "'Source Code Pro', Consolas, 'Liberation Mono', Menlo, Courier, monospace",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.occurrencesHighlight": false,
    "editor.rulers": [68,78,80,120],
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "none",

    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.automationShell.osx": "/bin/zsh",
    "terminal.integrated.automationShell.linux": "/bin/zsh",
    "terminal.integrated.shellArgs.osx": ["-l"],
    "terminal.integrated.shellArgs.linux": ["-l"],
    "terminal.integrated.fontFamily": "'Source Code Pro', Consolas, 'Liberation Mono', Menlo, Courier, monospace",
    "terminal.integrated.fontSize": 14,

    "workbench.tree.indent": 22,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.colorTheme": "One Dark Pro Monokai Darker",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "none",
    "workbench.fontAliasing":   "antialiased",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#50505049"
    },

    "window.zoomLevel": 0,

    "breadcrumbs.enabled": false,

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "extensions.autoUpdate": false,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "extensions.autoCheckUpdates": false,

    "update.mode": "manual",
    "update.showReleaseNotes": false,
    "typescript.disableAutomaticTypeAcquisition": true,
    "npm.fetchOnlinePackageInfo": false,

    "files.insertFinalNewline": true,
    "files.autoSave": "onFocusChange",
    "files.hotExit": "onExitAndWindowClose",
    "files.associations": {
        "environment": "dotenv",
        "*.env.dist": "dotenv",
        "*.neon.dist": "yaml",
        ".php_cs": "php",
        ".php_cs.dist": "php",
        ".php_cs.cache": "json",
        "*.json.dist": "json",
        ".my.cnf": "properties",
        ".wgetrc": "properties",
        ".dockerignore": "ignore",
        "zephir-autocomplete": "shellscript",
        "*.mem": "valgrind",
        "Makefile.*": "makefile",
        "*.cmake.in": "cmake",
        ".cmake-format": "yaml"
    },

    // Extensions

    "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
    "todo-tree.general.tags": [
        "TODO",
        "@TODO",
        "@Todo",
        "@todo",
        "FIXME",
        "@fixme",
        "@deprecated",
        "@note"
    ],

    "calva.lintOnSave": true,
    "calva.syncReplNamespaceToCurrentFile": true,

    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "C_Cpp.intelliSenseCachePath": "~/.cache/vscode/intelliSense",
    "C_Cpp.default.browse.path": [
        "/usr/include",
        "/usr/local/include",
        "/usr/include/x86_64-linux-gnu",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include"
    ],
    "C_Cpp.default.includePath": [
        "/usr/include",
        "/usr/local/include",
        "/usr/include/x86_64-linux-gnu",
        "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include"
    ],
    "C_Cpp.default.macFrameworkPath": [
        "/System/Library/Frameworks",
        "/Library/Frameworks"
    ],

    "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',  sans-serif ",

    "projectManager.showProjectNameInStatusBar": false,

    "shellcheck.ignorePatterns": {
        "**/*.zsh": true,
        "**/.zsh*": true,
        "**/.zprofile": true,
        "**/.zlogout": true,
        "**/.zlogin": true,
    },

    "c-cpp-flylint.flexelint.enable": false,
    "c-cpp-flylint.clang.enable": false,
    "c-cpp-flylint.cppcheck.enable": true,
    "c-cpp-flylint.cppcheck.platform": "unix64",
    "c-cpp-flylint.run": "onType",
    
    "cmake.configureOnOpen": true,

    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },

    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "googletest.failed",
                "settings": {
                    "foreground": "#f00"
                }
            },
            {
                "scope": "googletest.passed",
                "settings": {
                    "foreground": "#0f0"
                }
            },
            {
                "scope": "googletest.run",
                "settings": {
                    "foreground": "#0f0"
                }
            }
        ]
    },
    "gtest-adapter.debugConfig": "Debug",
    "gtest-adapter.supportLocation": true,
    "gtest-adapter.showCodeLens": true,
    "gtest-adapter.refreshAfterBuild": true,
    "gtest-adapter.runAfterBuild": false,
    "gtest-adapter.gotoTestTitle": "Go to Tree",
    "gtest-adapter.runTitle": "Run",
    "gtest-adapter.debugTitle": "Debug",
    "gtest-adapter.showRunOutput": true,
    "gtest-adapter.clearRunOutput": true,
}
