{
    "editor.dragAndDrop": false,
    "editor.lineNumbers": "off",
    "editor.renderIndentGuides": false,
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "none",
    "editor.cursorStyle": "block",
    "editor.fontFamily": "SFMono-Regular, Consolas, 'Liberation Mono', Menlo, Courier, monospace",
    "editor.fontSize": 17,
    "editor.fontLigatures": false,
    "editor.occurrencesHighlight": false,
    "editor.rulers": [72,80,120],
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "none",

    "terminal.integrated.cursorBlinking": true,

    "workbench.iconTheme": "vs-minimal",
    "workbench.colorTheme": "Dracula Soft",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#50505049"
    },

    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,

    "breadcrumbs.enabled": false,

    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    "extensions.autoUpdate": false,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "extensions.autoCheckUpdates": false,

    "update.mode": "manual",
    "update.showReleaseNotes": false,
    "typescript.disableAutomaticTypeAcquisition": true,
    "npm.fetchOnlinePackageInfo": false,

    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "environment": "dotenv"
    },

    // Extensions

    "calva.lintOnSave": true,
    "calva.syncReplNamespaceToCurrentFile": true,

    "php-cs-fixer.onsave": true,
    "php-cs-fixer.lastDownload": 0,
    "[php]": {
        "editor.defaultFormatter": "junstyle.php-cs-fixer"
    },

    "C_Cpp.updateChannel": "Insiders",
    "markdown.preview.fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',  sans-serif ",
    "projectManager.showProjectNameInStatusBar": false
}
