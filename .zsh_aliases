#!/usr/bin/env zsh

# See: https://superuser.com/a/656746/280737
alias ll='LC_ALL="C.UTF-8" ls -alF'

# Some more ls aliases
alias la='ls -A'
alias l='ls -CF'

# Clear screen
alias cls=clear

[ "$(command -v docker-compose 2>/dev/null)" != "" ] && alias dc="docker-compose"
[ "$(command -v docker 2>/dev/null)" != "" ] && {
  alias dps="docker ps --format 'table {{.ID}}\t{{.Names}}\t{{.Status}}'"
}

[ "$(command -v kubectl 2>/dev/null)" != "" ] && {
  alias k='kubectl'
  alias kcd='kubectl config set-context $(kubectl config current-context) --namespace'
}

[ "$(command -v clojure 2>/dev/null)" != "" ] && alias rebel="clojure -A:rebel"

