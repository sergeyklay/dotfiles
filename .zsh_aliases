#!/usr/bin/env zsh

# See: https://superuser.com/a/656746/280737
alias ll='LC_ALL="C.UTF-8" ls -alF'

# Some more ls aliases
alias la='ls -A'
alias l='ls -CF'

# Wget will use the supplied file as the HSTS database
[ ! -z "$(command -v wget 2>/dev/null || true)" ] && {
  alias wget='wget --hsts-file=$XDG_CACHE_HOME/wget-hsts'
}

[ ! -z "$(command -v docker 2>/dev/null || true)" ] && {
  alias dps="docker ps --format 'table {{.ID}}\t{{.Names}}\t{{.Status}}'"
}

[ ! -z "$(command -v kubectl 2>/dev/null || true)" ] && {
  alias k='kubectl'
  alias kcd='kubectl config set-context $(kubectl config current-context) -n'
}

[ ! -z "$(command -v clojure 2>/dev/null || true)" ] && {
  alias rebel="clojure -A:rebel"
}

